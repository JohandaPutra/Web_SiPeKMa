// DataTables
@import 'bootstrap-icons/font/bootstrap-icons.css';
@import 'datatables.net-bs5/css/dataTables.bootstrap5.min.css';
@import 'datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css';
@import 'datatables.net-select-bs5/css/select.bootstrap5.css';

// ========================================
// SIPEKMA CUSTOM STYLES
// ========================================
// Import custom SIPEKMA styles (tidak mengubah Sneat original)
// File terpisah untuk maintainability
@import 'custom/variables-custom';
@import 'custom/components-custom';
@import 'custom/utilities-custom';

$primary-color: #ff8157;

// Sneat Theme Colors (diambil dari template)
$success: #71dd37;
$danger: #ff3e1d;
$warning: #ffab00;
$info: #03c3ec;
$white: #fff;
$dark: #2b2c40;
$gray-200: rgba(#22303e, 0.12);

// DataTable Custom Styling
.dataTables_wrapper {
  .dataTables_paginate {
    .pagination {
      margin-bottom: 0;

      .page-link {
        border: 1px solid #d1d5db;
        color: #374151;
        padding: 0.5rem 0.75rem;
        margin: 0 2px;
        border-radius: 6px;

        &:hover {
          background: $primary-color;
          border-color: #9ca3af;
        }

        &:focus {
          box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
      }

      .page-item.active .page-link {
        background: $primary-color;
        border-color: $primary-color;
        color: white;
      }

      .page-item.disabled .page-link {
        color: #9ca3af;
        background: #f9fafb;
        border-color: #e5e7eb;
      }
    }
  }
}

// Breadcrumb Styling
.breadcrumb-style1 {
  background: none;
  padding: 0;
  margin: 0;

  .breadcrumb-item {
    font-size: 0.875rem;

    &:not(.active) a {
      color: #6b7280;
      text-decoration: none;

      &:hover {
        color: #374151;
      }
    }

    &.active {
      color: $primary-color;
      font-weight: 500;
    }

    &::before {
      content: '>';
      color: #9ca3af;
      margin: 0 0.5rem;
    }

    &:first-child::before {
      content: none;
    }
  }
}
// Toast Styling
.toast {
  opacity: 1 !important;

  &.bg-success {
    background-color: $primary-color !important;
    opacity: 1 !important;
  }

  &.bg-danger {
    background-color: $danger !important;
    opacity: 1 !important;
  }

  &.bg-warning {
    background-color: $warning !important;
    opacity: 1 !important;

    .toast-body {
      color: $dark !important;
    }
  }

  &.bg-info {
    background-color: $info !important;
    opacity: 1 !important;
  }
}

// Menu Footer Styling
.layout-menu {
  .app-brand {
    flex-shrink: 0;
    background: inherit;
  }

  .menu-inner {
    overflow-y: auto;
    overflow-x: hidden;
    
    // Custom scrollbar
    &::-webkit-scrollbar {
      width: 6px;
    }
    
    &::-webkit-scrollbar-track {
      background: rgba(0, 0, 0, 0.02);
    }
    
    &::-webkit-scrollbar-thumb {
      background: rgba(0, 0, 0, 0.1);
      border-radius: 3px;
      
      &:hover {
        background: rgba(0, 0, 0, 0.15);
      }
    }
  }

  .menu-footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    background: rgba(0, 0, 0, 0.02);
    
    small {
      font-size: 0.75rem;
      color: #6c757d;
      line-height: 1.4;
    }
  }
}

// Only apply flex layout on desktop (non-offcanvas mode)
@media (min-width: 1200px) {
  .layout-menu-fixed:not(.layout-menu-collapsed) .layout-menu {
    display: flex;
    flex-direction: column;
    height: 100vh;

    .app-brand {
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .menu-inner {
      flex: 1;
      margin-bottom: 0;
    }

    .menu-footer {
      flex-shrink: 0;
      margin-top: auto;
    }
  }
}

// Mobile sidebar - ensure overlay is clickable
@media (max-width: 1199px) {
  .layout-wrapper.layout-menu-expanded {
    .layout-overlay {
      opacity: 1 !important;
      visibility: visible !important;
      pointer-events: auto !important;
      cursor: pointer !important;
      z-index: 998 !important;
    }
  }

  // Prevent body scroll when sidebar is open
  body.layout-menu-expanded {
    overflow: hidden;
  }
}

// Enable smooth horizontal scrolling on mobile tables
.table-responsive {
  -webkit-overflow-scrolling: touch !important;
  overflow-x: auto !important;
  overflow-y: visible !important;
  width: 100% !important;
  touch-action: pan-x !important;
  
  // Force visible scrollbar on all devices
  scrollbar-width: auto !important; // Firefox
  
  // Larger, always-visible scrollbar for mobile
  &::-webkit-scrollbar {
    height: 12px !important;
    -webkit-appearance: none !important;
    display: block !important;
  }
  
  &::-webkit-scrollbar-track {
    background: #e9ecef !important;
    border-radius: 6px !important;
    border: 1px solid #dee2e6 !important;
  }
  
  &::-webkit-scrollbar-thumb {
    background: #6c757d !important;
    border-radius: 6px !important;
    border: 2px solid #e9ecef !important;
    
    &:hover {
      background: #495057 !important;
    }
    
    &:active {
      background: #343a40 !important;
    }
  }

  // Prevent table from breaking responsive container
  table {
    min-width: 100% !important;
    margin-bottom: 0 !important;
    touch-action: pan-x !important;
  }
}

// Mobile specific table improvements
@media (max-width: 767px) {
  .table-responsive {
    // Force scrollbar always visible on mobile
    &::-webkit-scrollbar {
      height: 14px !important;
    }
    
    &::-webkit-scrollbar-thumb {
      background: #007bff !important;
    }
    
    // Ensure table cells don't wrap
    table {
      th, td {
        white-space: nowrap !important;
      }
    }
  }
  
  // Fix card body padding for better mobile scroll
  .card-body {
    padding-left: 0.5rem !important;
    padding-right: 0.5rem !important;
    padding-bottom: 1rem !important;
  }
  
  // Add some margin after table for scrollbar visibility
  .table-responsive {
    margin-bottom: 0.5rem !important;
  }
}

// Mobile card alignment - make body content align with header
@media (max-width: 575px) {
  // Ensure card-body has same horizontal padding as card-header
  .card {
    .card-header {
      padding-left: 1rem !important;
      padding-right: 1rem !important;
    }
    
    .card-body {
      padding-left: 1rem !important;
      padding-right: 1rem !important;
    }
  }
}

