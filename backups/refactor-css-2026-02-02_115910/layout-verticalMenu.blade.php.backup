    <ul class="menu-inner py-1">
        @foreach ($menuData[0]->menu as $menu)
            {{-- adding active and open class if child is active --}}

            {{-- menu headers --}}
            @if (isset($menu->menuHeader))
                <li class="menu-header small text-uppercase">
                    <span class="menu-header-text">{{ __($menu->menuHeader) }}</span>
                </li>
            @else
                {{-- active menu method --}}
                @php
                    $activeClass = null;
                    $currentRouteName = Route::currentRouteName();

                    if (isset($menu->alwaysopen) && $menu->alwaysopen) {
                        $activeClass = 'open'; // jika ada always_open, maka langsung open
                    }
                    if ($currentRouteName === $menu->slug) {
                        $activeClass = 'active';
                    } elseif (isset($menu->submenu)) {
                        // Check if any submenu is active
                        foreach ($menu->submenu as $submenu) {
                            if (gettype($submenu->slug) === 'array') {
                                foreach ($submenu->slug as $slug) {
                                    if ($currentRouteName === $slug) {
                                        $activeClass = 'active open';
                                        break 2;
                                    }
                                }
                            } elseif ($currentRouteName === $submenu->slug) {
                                $activeClass = 'active open';
                                break;
                            }
                        }

                        // Fallback to old logic if no exact match
                        if (!$activeClass || $activeClass === 'open') {
                            if (gettype($menu->slug) === 'array') {
                                foreach ($menu->slug as $slug) {
                                    if (
                                        str_contains($currentRouteName, $slug) &&
                                        strpos($currentRouteName, $slug) === 0
                                    ) {
                                        $activeClass = 'active open';
                                    }
                                }
                            } else {
                                if (
                                    str_contains($currentRouteName, $menu->slug) &&
                                    strpos($currentRouteName, $menu->slug) === 0
                                ) {
                                    $activeClass = 'active open';
                                }
                            }
                        }
                    }
                @endphp

                {{-- main menu --}}
                @php
                    // Kondisi ketika menu non toggle ketika alwaysopen
                    $linkClass = 'menu-link';
                    if (isset($menu->submenu)) {
                        $linkClass = 'menu-link menu-toggle';
                        if (isset($menu->alwaysopen)) {
                            $linkClass .= 'menu-link bg-white';
                        }
                    }
                @endphp
                <li class="menu-item {{ $activeClass }}">
                    <a href="{{ isset($menu->url) ? url($menu->url) : 'javascript:void(0);' }}"
                        class="{{ $linkClass }}" @if (isset($menu->target) and !empty($menu->target)) target="_blank" @endif>
                        @isset($menu->icon)
                            <i class="{{ $menu->icon }}"></i>
                        @endisset
                        <div>{{ isset($menu->name) ? __($menu->name) : '' }}</div>
                        @isset($menu->badge)
                            <div class="badge rounded-pill bg-{{ $menu->badge[0] }} text-uppercase ms-auto">
                                {{ $menu->badge[1] }}</div>
                        @endisset
                    </a>

                    {{-- submenu --}}
                    @isset($menu->submenu)
                        @include('layouts.sections.menu.submenu', ['menu' => $menu->submenu])
                    @endisset
                </li>
            @endif
        @endforeach
    </ul>

